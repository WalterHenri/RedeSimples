<Window x:Class="RedeSimples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RedeSimples"
        mc:Ignorable="d"
        Title="RedeSimples - Ferramenta de Visualização de Rede" Height="720" Width="1280">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Arquivo">
                <MenuItem Header="_Abrir" Click="Abrir_Click"/>
                <MenuItem Header="_Salvar" Click="Salvar_Click"/>
                <MenuItem Header="Salvar _Como..." Click="SalvarComo_Click"/>
            </MenuItem>
        </Menu>

        <TabControl>
            <TabItem Header="Diagrama de Rede">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Caixa de Ferramentas" FontWeight="Bold" Margin="5"/>
                            <ItemsControl x:Name="Toolbox" PreviewMouseLeftButtonDown="Toolbox_PreviewMouseLeftButtonDown">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="{Binding ImagePath}" Width="32" Height="32" Margin="0,0,10,0" />
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Button x:Name="BtnPassarCabo" Content="Passar Cabo" Margin="5" Click="BtnPassarCabo_Click"/>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <Canvas x:Name="MainCanvas" Width="2000" Height="2000" Background="WhiteSmoke" Drop="MainCanvas_Drop" AllowDrop="True"/>
                    </ScrollViewer>

                    <Border Grid.Column="2" BorderBrush="Gainsboro" BorderThickness="1,0,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10">
                                <StackPanel x:Name="PropertiesPanel" Visibility="Collapsed">
                                    <TextBlock Text="Propriedades do Dispositivo" FontWeight="Bold"/>
                                    <TextBlock Text="Nome:" Margin="0,10,0,0"/>
                                    <TextBox x:Name="TxtName" TextChanged="TxtName_TextChanged"/>
                                    <TextBlock Text="Endereço IP:" Margin="0,10,0,0"/>
                                    <TextBox x:Name="TxtIpAddress" TextChanged="TxtIpAddress_TextChanged"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnPing" Content="Ping" Click="BtnPing_Click"/>
                                        <Button x:Name="BtnTraceRoute" Content="TraceRoute" Margin="5,0,0,0" Click="BtnTraceRoute_Click"/>
                                    </StackPanel>
                                    <TextBlock Text="Saída do Comando:" Margin="0,10,0,0"/>
                                    <TextBox x:Name="TxtOutput" Height="150" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel x:Name="RoomPropertiesPanel" Visibility="Collapsed" Margin="0,20,0,0">
                                    <TextBlock Text="Propriedades do Cômodo" FontWeight="Bold"/>
                                    <TextBlock Text="Nome:" Margin="0,10,0,0"/>
                                    <TextBox x:Name="TxtRoomName" TextChanged="TxtRoomName_TextChanged"/>
                                    <TextBlock Text="Cor de Fundo (Hex):" Margin="0,10,0,0"/>
                                    <TextBox x:Name="TxtRoomBackgroundColor" TextChanged="TxtRoomBackgroundColor_TextChanged"/>
                                    <TextBlock Text="Cor da Borda (Hex):" Margin="0,10,0,0"/>
                                    <TextBox x:Name="TxtRoomBorderColor" TextChanged="TxtRoomBorderColor_TextChanged"/>
                                    <TextBlock Text="Espessura da Borda:" Margin="0,10,0,0"/>
                                    <Slider x:Name="SliderBorderThickness" Minimum="1" Maximum="10" ValueChanged="SliderBorderThickness_ValueChanged"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Status da Rede">
                <local:NetstatControl />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>